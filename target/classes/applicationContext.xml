<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="opBean" class="beans.Operation"/>
    <bean id="trackMyBean" class="aspect.OperationAspectBefore"/>
    <bean id="afterReturning" class="aspect.AfterReturning"/>
    <bean id="aroundAdvice" class="aspect.AroundAdvice"/>
    <bean id="afterThrowing" class="aspect.AfterThrowing"/>

    <bean class="org.springframework.aop.aspectj.annotation.AnnotationAwareAspectJAutoProxyCreator"/>

</beans>